@page "/"

<MudContainer MaxWidth="MaxWidth.Medium" Class="my-16">
    <MudGrid>
        <MudItem xs="12">
            <MudPaper Elevation="20" Class="pa-3">
                <MudText Typo="Typo.h4" Align="Align.Center" Class="pa-2">
                    Aaron J. Smith
                </MudText>
                <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="pa-1">
                    Full-Stack .NET Developer
                </MudText>
                <MudText Typo="Typo.h6" Align="Align.Left" Class="pa-4">
                    I hold a bachelor's degree in computer science from Capella University
                    and have over a decade of total experience working in the IT industry.
                </MudText>
                <MudText Typo="Typo.h6" Align="Align.Left" Class="pa-4">
                    Currently I am employed designing custom web applications to
                    handle contract management and/or legal documentation.  Clients that
                    I've worked for include 3-letter TV networks and international banks.
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Elevation="20" Class="pa-3">
                <MudText Typo="Typo.h6" Class="ma-3" Style="color: var(--mud-palette-text-primary);" Align="Align.Center">
                    Thanks for visiting!
                </MudText>
                <MudText Typo="Typo.h6" Class="ma-3" Style="color: var(--mud-palette-text-primary);" Align="Align.Center">
                    Use the navigation button for more information about my experience or to contact me!
                </MudText>
                
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Elevation="20" Class="pa-3 d-flex flex-row align-center justify-center">
                <MudIcon Icon="@Icons.Material.Filled.Code" />
                <MudLink Typo="Typo.h5" Href="https://github.com/polaarbear/" Class="pl-2">My GitHub</MudLink>
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Elevation="20" Class="pa-3">
                <MudText Typo="Typo.body2" Class="ma-3" Style="color: var(--mud-palette-text-primary);" Align="Align.Center">
                    The page background is semi-randomly animated and requires no JavaScript.
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>